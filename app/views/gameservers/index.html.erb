<% title "Game servers" %>



<div class="panel panel-default">
  <div class="panel-heading">List of Game servers</div>
  <div class="panel-body">
    <table class="table">  <thead>
    <tr>
      <th>Name</th>
      <th>IP</th>
      <th>port</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gameservers.each do |gameserver| %>
      <tr>
        <td><%= gameserver.name %></td>
        <td><%= gameserver.ip %></td>
        <td><%= gameserver.port %></td>
        <td><%= link_to 'Show', gameserver %></td>
        <td><%= link_to 'Edit', edit_gameserver_path(gameserver) %></td>
        <td><%= link_to 'Destroy', gameserver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>

</div>

<br>

<%= link_to 'New Server', new_gameserver_path %>

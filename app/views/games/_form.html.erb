<%= form_for(@game) do |f| %>
    <fieldset class="form-horizontal">




    <div class="form-group title">
      <%= f.label :title,class:"control-label col-sm-2" %>
      <div class="col-sm-10">
      <%= f.text_field :title,class:"form-control" %>
        </div>
    </div>
      <div class="form-group title">
        <%= f.label :developer,class:"control-label col-sm-2" %>
        <div class="col-sm-10">

        <%= f.select :developer_id, options_for_select(Developer.all.map{|d|[d.name, d.id]},@game.developer_id),class:"form-control" %>
        </div>
      </div>

      <div class="form-group actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
<% end %>

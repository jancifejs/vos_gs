<!-- app/views/users/new.html.erb -->


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Please provide your info</h3>
      </div>
      <div class="panel-body">



        <%= form_for :user, url: '/users' do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.text_field :name, class: "form-control", placeholder: "Name"  %>
              </div>
              <div class="form-group">
                <%= f.text_field :email, class: "form-control", placeholder: "User email"  %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
              </div>
              <%= submit_tag "Register",  class: 'btn btn-lg btn-primary btn-block' %>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

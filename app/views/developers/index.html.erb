<% title "Game developers" %>


<div class="panel panel-default">
  <div class="panel-heading">List of Game developers</div>
  <div class="panel-body">

  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.name %></td>
        <td><%= link_to 'Show', developer %></td>
        <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>

</div>

<br>
<div class="form-group">
<%= link_to 'New Developer', new_developer_path,class: "btn btn-primary" %>
</div>